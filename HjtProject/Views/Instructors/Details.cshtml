@{
    var instructor = (InstructorModel)ViewData["instructor"];
    var org = (string)ViewData["org"];
    var crs = (string)ViewData["crs"];
    Layout = "InstructorLayout";
}


<h2 style="color: #30475e"> Meet Tuwaiq's Ambassadors </h2>
<body>

    <div class=" d-flex flex-wrap">

        <div class="card .text-black " style="width: 30rem; margin-inline:auto">
            <img src="@instructor.pic" class="card-img-top" alt="pic" width="300" height="300 ">
            <div class="card-body" style="color: #30475e ;background-color:#e7e7de ">
                <h5 class="card-title">@instructor.name</h5>
                @{if (instructor.Course == null)
                    {
                        <p class="card-text">This instructor is teaching: <a asp-controller="Courses" asp-action="Details" asp-route-id="40437293123"><b>@crs</b> </a></p>
                    }
                    else
                    {
                        <p class="card-text">This instructor is teaching: <a asp-controller="Courses" asp-action="Details" asp-route-id="@instructor.Course.Id"><b>@crs</b> </a></p>
                    }}
                @{if (@instructor.OrganizationId == null)
                    {
                        <p class="card-text">This instructor is under : <a asp-controller="Courses" asp-action="Details" asp-route-id="40437293123"><b>@org</b> </a></p>
                    }
                    else
                    {
                        <p class="card-text">This instructor is under : <a asp-controller="Courses" asp-action="Details" asp-route-id="@instructor.OrganizationId"><b>@org</b> </a></p>
                    }}


                <p class="card-text">Info : <b>@instructor.summary </b></p>
                <a asp-controller="Instructors" asp-action="Index"> <button class="btn btn-danger">Back to Instructors </button> </a>

            </div>
        </div>

    </div>

</body>


