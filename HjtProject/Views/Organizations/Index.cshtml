@{var organizations = (List<OrganizationModel>)ViewData["organizations"];

    <h2 style="color: #30475e"> Our organizations</h2>
    <body>

        <div class=" d-flex flex-wrap">
            @foreach (var org in organizations)
            {
                <div class="card text-center mb-4 " style="width: 12rem; margin-inline:auto ;">
                    <img src="@org.pic" class="card-img-top" alt="Tea Coal" width="100" height="180 ">
                    <div class="card-body" style="color: #30475e ;background-color:#e7e7de ">
                        <h5 class="card-title">@org.name</h5>
                        <a class="btn btn-secondary nav-link" asp-area="" asp-controller="organizations" asp-action="Details" asp-route-id="@org.Id">Details</a>
                    </div>
                </div>
            }
        </div>

    </body>
}
